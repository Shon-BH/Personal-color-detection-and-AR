    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.tonetalk_android.home.ui.history.HistoryFragment"
        android:label="@string/title_pc"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.tonetalk_android.home.ui.personalcolorcheck.pcFragment"
